@model IEnumerable<CRUD_Employees.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="text-light">Employees</h2>
    <a asp-action="Create" class="btn btn-primary btn-md py-1 px-3 hover-text-color">Create New Employee</a>
</div>

<table class="table table-striped table-dark custom-table-padding">
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="location.href='@Url.Action("Details", new { id = item.Id })';" style="cursor: pointer;">
                <td class="mb-4 employee-td-font p-3">
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
            </tr>
        }
    </tbody>
</table>

