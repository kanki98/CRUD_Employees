                <label asp-for="DaysOff" class="control-label"></label>
                <input asp-for="DaysOff" class="form-control" />
                <span asp-validation-for="DaysOff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaidLeaveDays" class="control-label"></label>
                <input asp-for="PaidLeaveDays" class="form-control" />
                <span asp-validation-for="PaidLeaveDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

